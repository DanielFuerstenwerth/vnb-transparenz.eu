<div id="map"></div>
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
<script>
const map=L.map('map').setView([51.2,10.4],6);
L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png',{maxZoom:19,attribution:'Â© OSM'}).addTo(map);
fetch('data/vnb.geojson').then(r=>r.json()).then(gj=>{
  const layer=L.geoJSON(gj).addTo(map);
  map.fitBounds(layer.getBounds());
});
</script>
